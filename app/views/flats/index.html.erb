<h1>All our flats</h1>

<div class="container">
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card">
          <div class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://kitt.lewagon.com/placeholder/cities/shanghai');">
          </div>
          <div class="card-description">
            <h2><%= flat.name %></h2>
            <p><%= flat.address %></p>
            <p>
              <i class="fa fa-users"> <%= flat.number_of_guests %></i>
              <i class="fa fa-euro-sign"><%= flat.price_per_night %></i>
            </p>
          </div>
          <div class="card-actions">
            <%= link_to 'More info', flat_path(flat), class: 'text-primary' %>
            <%= link_to 'Edit', edit_flat_path(flat), class: 'text-warning' %>
            <%= link_to 'Remove', '#', class: 'text-danger' %>
          </div>
        </div>
      </div>
    <%end %>
  </div>
</div>
